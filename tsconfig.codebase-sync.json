{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/codebase-sync-client": ["node_modules/.prisma/codebase-sync-client"]
    }
  },
  "include": ["codebase-sync.ts"],
  "exclude": ["node_modules"]
}
