{
  "name": "Sophra Development Environment",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-contrib/features/pnpm:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/flexwie/devcontainer-features/op:1": {},
    "ghcr.io/robbert229/devcontainer-features/postgresql-client:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/digitalocean-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions",
        "saoudrizwan.claude-dev",
        "streetsidesoftware.code-spell-checker",
        "Vitest.vitest-explorer",
        "christian-kohler.npm-intellisense",
        "ms-vscode.vscode-typescript-next",
        "prisma.prisma",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always"
        },
        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.autoImports": true,
        "javascript.updateImportsOnFileMove.enabled": "always",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    },
    "codespaces": {
      "repositories": {
        "*": {
          "trusted": true
        }
      }
    }
  },

  "forwardPorts": [3000],

  "postCreateCommand": "bash -c 'npm install -g pnpm & pnpm install & (cd prisma2 && pnpm install) & git clone https://github.com/sophra-org/sophra-dev-provider.git /workspaces/sophra-dev-provider & (cd /workspaces/sophra-dev-provider && pnpm install && npx prisma generate && npm run build) & wait'",

  "postStartCommand": {
    "install-deps": "bash -c 'pnpm install & (cd prisma2 && pnpm install) & wait'",
    "start-mcp": "bash -c 'cd /workspaces/sophra-dev-provider && npm start'"
  },

  "remoteUser": "node",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,readonly",
    "source=${localWorkspaceFolder}/../sophra-dev-provider,target=/workspaces/sophra-dev-provider,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "SHELL": "/usr/bin/pwsh",
    "PROVIDER_DATABASE_URL": "${SECRET_PROVIDER_DATABASE_URL}",
    "DATABASE_URL": "${SECRET_DATABASE_URL}"
  },

  "waitFor": "postCreateCommand",

  "runArgs": ["--init", "--privileged"]
}
