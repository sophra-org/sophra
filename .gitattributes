coverage/**/*.* text eol=lf -filter -diff -merge
coverage/coverage-final.json text eol=lf -filter -diff -merge
coverage/lcov.info text eol=lf -filter -diff -merge
test-report.junit.xml text eol=lf -filter -diff -merge 